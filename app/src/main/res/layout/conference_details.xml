<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dmn_size_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvConfTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dmn_size_5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Android Developer"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dmn_size_25dp" />

            <Button
                android:id="@+id/btnJoinConfDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Join"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dmn_size_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dmn_size_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_calender" />

                <TextView
                    android:id="@+id/tvConfDateCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dmn_size_5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="4th Dec 2016"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dmn_size_20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dmn_size_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/tvConfTimeCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dmn_size_5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="6:00 to 10:00 PM"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dmn_size_20dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:fontFamily="sans-serif"
            android:text="Location:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfLocationCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1501 Decoto rd, Union City, CA"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:text="Hosted by:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrganizerCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:gravity="center"
            android:text="Sunder Pichai"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:text="Description:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfDetailsCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dmn_size_5dp"
            android:layout_marginTop="@dimen/dmn_size_10dp"
            android:gravity="center"
            android:text="New features and functionalities of Android O."
            android:textColor="@android:color/black"
            android:textSize="@dimen/dmn_size_20dp" />
    </LinearLayout>
</ScrollView>
